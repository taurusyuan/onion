<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.modules.onion.dao.FeedbackDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.renren.modules.onion.entity.FeedbackEntity" id="feedbackMap">
        <result property="id" column="id"/>
        <result property="userName" column="user_name"/>
        <result property="type" column="type"/>
        <result property="feedback" column="feedback"/>
        <result property="treatmentState" column="treatment_state"/>
        <result property="tel" column="tel"/>
        <result property="createTime" column="create_time"/>
		<result property="typeName" column="type_name"/>
    </resultMap>

	<select id="queryObject" resultType="io.renren.modules.onion.entity.FeedbackEntity">
		select * from feedback where id = #{value}
	</select>

	<select id="queryList" resultType="io.renren.modules.onion.entity.FeedbackEntity">
		select feedback.* ,
		feedback_type.type_name AS type_name
		from feedback
		INNER JOIN feedback_type
		ON feedback.type=feedback_type.id
		where feedback.id IS NOT NULL
		<if test="user_name != null and user_name != ''">
			AND feedback.user_name LIKE concat('%',#{user_name},'%')
		</if>
		<if test="type != null and type != ''">
			AND feedback.type = #{type}
		</if>
		<if test="feedback != null and feedback != ''">
			AND feedback.feedback LIKE concat('%',#{feedback},'%')
		</if>
		<if test="tel != null and tel != ''">
			AND feedback.tel LIKE concat('%',#{tel},'%')
		</if>
		<if test="treatment_state != null and treatment_state != ''">
			AND feedback.treatment_state = #{treatment_state}
		</if>

        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from feedback 
	</select>
	 
	<insert id="save" parameterType="io.renren.modules.onion.entity.FeedbackEntity" useGeneratedKeys="true" keyProperty="id">
		insert into feedback
		(
			`user_name`, 
			`type`, 
			`feedback`, 
			`treatment_state`, 
			`tel`, 
			`create_time`
		)
		values
		(
			#{userName}, 
			#{type}, 
			#{feedback}, 
			#{treatmentState}, 
			#{tel}, 
			#{createTime}
		)
	</insert>
	 
	<update id="update" parameterType="io.renren.modules.onion.entity.FeedbackEntity">
		update feedback 
		<set>
			<if test="userName != null">`user_name` = #{userName}, </if>
			<if test="type != null">`type` = #{type}, </if>
			<if test="feedback != null">`feedback` = #{feedback}, </if>
			<if test="treatmentState != null">`treatment_state` = #{treatmentState}, </if>
			<if test="tel != null">`tel` = #{tel}, </if>
			<if test="createTime != null">`create_time` = #{createTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from feedback where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from feedback where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>